<h1>Boncommande list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Numero</th>
            <th>Datemouvement</th>
            <th>Objetbc</th>
            <th>Designationlivraison</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('boncommande_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.numero }}</td>
            <td>{% if entity.dateMouvement %}{{ entity.dateMouvement|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.objetBc }}</td>
            <td>{{ entity.designationLivraison }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('boncommande_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('boncommande_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('boncommande_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
