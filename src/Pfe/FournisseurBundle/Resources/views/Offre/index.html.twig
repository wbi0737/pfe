<h1>Offre list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Createdat</th>
            <th>Expiredat</th>
            <th>Designation</th>
            <th>Userid</th>
            <th>Cahiercharge</th>
            <th>Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('offre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.expiredAt %}{{ entity.expiredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.designation }}</td>
            <td>{{ entity.userId }}</td>
            <td>{{ entity.cahierCharge }}</td>
            <td>{{ entity.code }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('offre_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offre_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('offre_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
